import random

user_wins = 0
computer_win = 0
options = ['Rock', 'Paper', 'Scissors']

while True:
    user_input = input("Enter 'Rock', 'Paper', or 'Scissors', or Enter Q to quit: ")
    if user_input == 'Q':
        break

    if user_input not in options:
        continue
    random_number = random.randint(0, 2)
    computer_pick = options[random_number]

    print(f'computer pick {computer_pick}')

    if user_input == 'Rock' and computer_pick == 'Scissors':
        print('user Wins!')
        user_wins += 1
    elif user_input == 'Paper' and computer_pick == 'Scissors':
        print('Computer Wins!')
        computer_win += 1
    elif user_input == 'Scissors' and computer_pick == 'Scissors':
        print('it\'s a Tie!')
    elif user_input == 'Rock' and computer_pick == 'Rock':
        print('it\'s a Tie!')
    elif user_input == 'Rock' and computer_pick == 'Paper':
        print('Computer Wins!')
        computer_win += 1
    elif user_input == 'Paper' and computer_pick == 'Paper':
        print('it\'s a Tie!')
    elif user_input == 'Paper' and computer_pick == 'Rock':
        print('User Wins!')
        user_wins += 1
    elif user_input == 'Scissors' and computer_pick == 'Scissors':
        print('it\'s a Tie!')
    elif user_input == 'Scissors' and computer_pick == 'Paper':
        print('User Wins')
        user_wins += 1
    elif user_input == 'Scissors' and computer_pick == 'Rock':
        print('Computer Wins')
        computer_win += 1
    else:
        pass
